<div class="home-page text-center container-fluidwidth">
  <h1>Welcome to DevMatch</h1>
  <h3>A membership site where developers and entrepreneur can network</h3>
</div>

<div class="container home-signup-links">
  <div class="row">
    
    <% if user_signed_in?%>
      <div class="col-md-6 col-md-offset-3">
        <div class="well">
          <h2 class="text-center">Your Profile</h2>
          <% if current_user.profile %>
            <%= link_to "Edit Profile", "#", class: 'btn btn-default btn-lg btn-block' %>
            <%= link_to "View Profile", user_path(id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <%else%>
            <p class="text-center"> Create your professional profile!</p></p>
            <%= link_to "Create Profile!", new_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block'%>
          <%end%>
        </div>
      </div>
      <div class="col-md-6 col-md-offset-3">
        <div class="well">
          <h2 class="text-center">The Comminuty</h2>
          <p class="text-center"> Visit DevMatch Comminuty!</p>
          <%= link_to "Visit Comminuty", "#", class: 'btn btn-default btn-lg btn-block' %>
        </div>
      </div>
    <%else%>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Basic Membership</h2>
          <h4>
            <ul>
              <li>Customise your professional profile</li>
              <li>Network with companies worldwide</li>
              <li>Search and view other members profiles</li>
            </ul>
          </h4>
          <h2 class="text-center"> FREE!!!</h2>
          <br>
          <%= link_to "Basic Sign Up", new_user_registration_path(subscription: @basic_subscription.id), class: "bt btn-primary btn-lg btn-block text-center" %>
        </div>
      </div>
      
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Premium Membership</h2>
          <h4>
            <ul>
              <li> See who's viewing your profile </li>
              <li> Access Contact Info </li>
              <li> Access Industry News </li>
              <li> Access Profile Analytics </li>
              <li> Much much more... </li>
            </ul>
          </h4>
          <h2 class="text-center"> Â£9.99/month</h2>
          <br>
          <%= link_to "Premium Sign Up", new_user_registration_path(subscription: @pro_subscription.id), class: "bt btn-warning btn-lg btn-block text-center" %>
        </div>
      </div>
    <%end%>
  </div>
</div>