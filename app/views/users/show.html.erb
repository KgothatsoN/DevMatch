<div class="container">
  <div class="row">
    <div class="col-md-3 text-center">
      <%= image_tag @user.profile.avatar.url, class: 'avatar-img' %>
    </div>
    
    <div class="col-md-6">
      <h1><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
      <h3><span class="occupation-icon"><%= occupation_icon %></span><%= @user.profile.occupation%></h3>
      <div class="well profile-block profile-about">
        <h3>About</h3>
        <p><%= @user.profile.about%></p>
      </div>
      <% if current_user.subscription_id == 2 %>
        <div class="well profile-block contact-info">
          <h3>Contact Info</h3>
          <p><%= @user.profile.telephone_number%></p>
          <p><%= @user.profile.email%></p>
        </div>
      <%end%>
      
    </div>
  </div>
</div>